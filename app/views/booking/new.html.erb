<br>
<section class="container">
  <h4>Book a Tee Time</h4>
  <div class="row">
    <div class="col s12">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <!-- <span class="card-title">Book a Tee Time</span> -->
            <%= form_for @booking, url: '/booking', :html => {:class => 'col s12'} do |form| %>

              <% if @booking.errors.any? %>
                <ul class="error-message">
                  <% @booking.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              <% end %>

              <%= form.hidden_field :user_id, :value => session[:user_id], id: 'booking_user_id' %>

              <div class="row">
                <%= form.label :club_id %>
                <%= form.select :club_id, options_from_collection_for_select(Club.all, :id, :name), {:prompt => "--select a club--"}, id: 'booking_club_id' %>
              </div>

              <div class="row">
                <div class="col s5">
                  <%= form.label :day %>
                  <%= form.date_field :day, min: Date.today, max: Date.today + 30.days, value: Date.today, id: 'booking_day' %>
                </div>
                <div class="col s5">
                  <%= form.label :time_slot %>
                  <%= form.select :time_slot, options_for_select([
                    ['9:00 - 09.20', '0'],
                    ['9:20 - 09.40', '1'],
                    ['9:40 - 10.00', '2'],
                    ['10:00 - 10.20', '3'],
                    ['10:20 - 10.40', '4'],
                    ['10:40 - 11.00', '5'],
                    ['11:00 - 11.20', '6'],
                    ['11:20 - 11.40', '7'],
                    ['11:40 - 12.00', '8'],
                    ['12:00 - 12.20', '9'],
                    ['12:20 - 12.40', '10'],
                    ['12:40 - 13.00', '11'],
                    ['13:00 - 13.20', '12'],
                    ['13:20 - 13.40', '13'],
                    ['13:40 - 14.00', '14'],
                    ['14:00 - 14.20', '15'],
                    ['14:20 - 14.40', '16'],
                    ['14:40 - 15.00', '17'],
                    ['15:00 - 15.20', '18'],
                    ['15:20 - 15.40', '19'],
                    ['15:40 - 16.00', '20'],
                    ['16:00 - 16.20', '21'],
                    ['16:20 - 16.40', '22'],
                    ['16:40 - 17.00', '23'],
                  ]), id: 'booking_time_slot'%>
                </div>
                <div class="col s2">
                  <%= button_tag 'Check Availability', type: 'button', id: 'check_availability'%>
                </div>
              </div>
              <div class="row center-align">
                <a href="/booking" class="btn btn-medium center-align waves-effect waves-light no-uppercase"> Cancel </a> &nbsp;&nbsp;&nbsp;&nbsp;
                <%= form.submit 'Reserve Slot', class: 'btn btn-medium center-align waves-effect waves-light no-uppercase' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

